<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AvatarStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SolidButton">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/pingfang_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_main</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/pingfang_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/pingfang_medium</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>
</resources>